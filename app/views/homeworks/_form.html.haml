-# frozen_string_literal: true
= simple_form_for(@homework) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :title
    = f.input :subject
    = f.input :due_date
    = f.input :description

  .form-actions
    = f.button :submit
