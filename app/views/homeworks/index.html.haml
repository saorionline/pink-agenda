%h1 Listing homeworks

%table
  %thead
    %tr
      %th Title
      %th Subject
      %th Due date
      %th Description
      %th
      %th
      %th

  %tbody
    - @homeworks.each do |homework|
      %tr
        %td= homework.title
        %td= homework.subject
        %td= homework.due_date
        %td= homework.description
        %td= link_to 'Show', homework
        %td= link_to 'Edit', edit_homework_path(homework)
        %td= link_to 'Destroy', homework, :method => :delete, :data => { :confirm => 'Are you sure?' }

